//- Все примеси в этом файле должны начинаться c имени блока (tv)

mixin tv(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
    +tv('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' tv--' + modsList[i].trim();
      }
    }

  section.tv.a-section(class=allMods)&attributes(attributes)
